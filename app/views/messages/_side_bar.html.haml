.side-bar
  .side-bar__user-name
    .top-items
      %h3.top-items__name
        = current_user.name
      .top-items__icon
        = link_to edit_user_path(current_user.id) do
          = icon('fas','cog',class:'top-items__btn')
         
        = link_to new_group_path()  do
          = icon('far','edit', class:"top-items__btn    top-items__edit")
  .groups
    - current_user.groups.each do |group|
      .group
        .group__name
          = link_to group_messages_path(group), class:"group__icon" do
            = group.name
        .group__message
          = group.show_last_message        
    