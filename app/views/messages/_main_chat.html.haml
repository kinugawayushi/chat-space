.main-chat
  .chat-main__group-info
    .chat-main__left
      %h2.chat-main-left__currentgroup
        = @group.name
      %ul.chat-main-left__member
        Member:
        %li.chat-main__left-list
          - @group.users.each do |user|
            = user.name
    .chat-main__right
      = link_to edit_group_path(@group),class:"chat-main__edit-btn" do
        Edit  
  .chat-main-messages
    = render @messages

  .chat-main-message-form
    .chat-main-message-form__new
      .form
        = form_for [@group, @message] do |f|
          .chat-main-message-form__box
            = f.text_field :content, class: 'input-text-box',placeholder: 'type a message'
            = f.label :image, class: 'input-box-image'do
              = icon('fas','image',)
              =f.file_field :image, class:'box-image-file'
          .chat-main__form-btn
            = f.submit 'Send', class:'input-send-btn'




